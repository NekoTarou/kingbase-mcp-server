# 数据库连接
DB_HOST=localhost
DB_PORT=54321
DB_USER=system
DB_PASSWORD=
DB_NAME=kingbase
DB_SCHEMA=public

# 传输模式: stdio | http
TRANSPORT=stdio
MCP_PORT=3000
MCP_HOST=0.0.0.0

# 权限模式: readonly | readwrite | full | admin
ACCESS_MODE=readonly

# HTTP 会话管理（仅在 TRANSPORT=http 时有效）
# SESSION_TIMEOUT_MS: 会话超时时间（毫秒），默认 1800000（30分钟）
SESSION_TIMEOUT_MS=1800000

# MAX_SESSIONS: 最大并发会话数，默认 100
MAX_SESSIONS=100

# SESSION_CLEANUP_INTERVAL_MS: 会话清理检查间隔（毫秒），默认 60000（1分钟）
SESSION_CLEANUP_INTERVAL_MS=60000

# ENABLE_SESSION_DEBUG: 启用会话调试日志和 /sessions 端点，默认 false
ENABLE_SESSION_DEBUG=false
